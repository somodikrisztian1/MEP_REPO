<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_about_remote_textview_content_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/fragment_firstlevel_about_remote_imageview_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_about_remote_textview_content_0"
            android:adjustViewBounds="true"
            android:src="@drawable/tavfel_inverterek" />

        <TextView
            android:id="@+id/fragment_firstlevel_about_remote_textview_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_about_remote_imageview_1"
            android:text="@string/fragment_firstlevel_about_remote_text_title_1"
            android:textStyle="bold" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_about_remote_textview_content_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_about_remote_textview_title_1" />

        <ImageView
            android:id="@+id/fragment_firstlevel_about_remote_imageview_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_about_remote_textview_content_1"
            android:adjustViewBounds="true"
            android:src="@drawable/tavfel_napelem" />

        <TextView
            android:id="@+id/fragment_firstlevel_about_remote_textview_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_about_remote_imageview_2"
            android:text="@string/fragment_firstlevel_about_remote_text_title_2"
            android:textStyle="bold" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_about_remote_textview_content_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_about_remote_textview_title_2" />

        <TextView
            android:id="@+id/fragment_firstlevel_about_remote_textview_title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_about_remote_textview_content_2"
            android:text="@string/fragment_firstlevel_about_remote_text_title_3"
            android:textStyle="bold" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_about_remote_textview_content_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_about_remote_textview_title_3"
            android:layout_marginBottom="20dp" />
    </RelativeLayout>

</ScrollView>