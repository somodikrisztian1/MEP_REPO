<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_research_center_textview_content_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/fragment_firstlevel_research_center_imageview_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_research_center_textview_content_0"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/kutat2" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_research_center_textview_content_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_research_center_imageview_1" />

        <ImageView
            android:id="@+id/fragment_firstlevel_research_center_imageview_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_research_center_textview_content_1"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/kutat3" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_research_center_textview_content_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_research_center_imageview_2" />

        <ImageView
            android:id="@+id/fragment_firstlevel_research_center_imageview_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_research_center_textview_content_2"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/kutat4" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_research_center_textview_content_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_research_center_imageview_3" />

        <ImageView
            android:id="@+id/fragment_firstlevel_research_center_imageview_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_research_center_textview_content_3"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:paddingBottom="10dp"
            android:src="@drawable/kutat5" />
    </RelativeLayout>

</ScrollView>