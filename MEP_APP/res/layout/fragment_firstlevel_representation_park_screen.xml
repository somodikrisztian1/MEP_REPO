<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/fragment_firstlevel_representation_park_textview_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:text="@string/fragment_firstlevel_representation_park_text_title_1"
            android:textStyle="bold" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_representation_park_textview_content_1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_representation_park_textview_title_1" />

        <ImageView
            android:id="@+id/fragment_firstlevel_representation_park_picture_imageview_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_representation_park_textview_content_1_1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/bemutato_park_1" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_representation_park_textview_content_1_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_representation_park_picture_imageview_1" />

        <TextView
            android:id="@+id/fragment_firstlevel_representation_park_textview_title_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_representation_park_textview_content_1_2"
            android:layout_margin="8dp"
            android:text="@string/fragment_firstlevel_representation_park_text_title_2"
            android:textStyle="bold" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_representation_park_textview_content_2_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_representation_park_textview_title_2"
            android:layout_marginBottom="5dp" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_representation_park_textview_content_2_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_representation_park_textview_content_2_1" />

        <TextView
            android:id="@+id/fragment_firstlevel_representation_park_textview_title_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_representation_park_textview_content_2_2"
            android:layout_margin="8dp"
            android:text="@string/fragment_firstlevel_representation_park_text_title_3"
            android:textStyle="bold" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_representation_park_textview_content_3_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_representation_park_textview_title_3"
            android:layout_marginBottom="5dp" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_representation_park_textview_content_3_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_representation_park_textview_content_3_1" />

        <ImageView
            android:id="@+id/fragment_firstlevel_representation_park_picture_imageview_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_representation_park_textview_content_3_2"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/bemutato_park_4" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_representation_park_textview_content_3_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/fragment_firstlevel_representation_park_picture_imageview_2" />

        <bluejamesbond.textviewjustifier.TextViewEx
            android:id="@+id/fragment_firstlevel_representation_park_textview_content_3_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_firstlevel_representation_park_textview_content_3_3"
            android:layout_marginBottom="20dp" />
    </RelativeLayout>

</ScrollView>